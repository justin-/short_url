<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
    <span class="title"><%= link_to "ShortURL", root_path %></span>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
          <p><%= image_tag current_user.avatar, size: '36x36' %> <%= current_user.email %></p>
          <p class="pull-right"><%= link_to 'Sign Out', signout_path, method: 'delete' %></p>
          <% else %>
          <p><%= image_tag('github-32.png') %> <%= link_to 'Sign in with GitHub', '/auth/github' %>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
